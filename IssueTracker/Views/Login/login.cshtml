<body style="overflow-y: hidden;">
    <div class="l-form-3-container section-container section-container-image-bg" style="position: relative; z-index: 0; background: none;">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 l-form-3-box wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">

                    <div class="l-form-3-top">
                        <div class="l-form-3-top-left">
                            <h3>Login to Issue Tracker</h3>
                            <p>Enter your username and password to log in:</p>
                        </div>
                        <div class="l-form-3-top-right" style="opacity:1">
                            <img src="~/Images/maintenance-icon-14.png" style="width:40px; margin-top:13px;" />
                        </div>
                    </div>
                    <div class="l-form-3-bottom">
                        <form role="form" action="" method="post">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.UserName, new { @class= "l-form-3-username form-control", @id = "l-form-2-username", @placeholder = "UserName" })
                                @Html.ValidationMessageFor(model => model.UserName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Password, new { @class = "l-form-3-password form-control", @id = "l-form-3-password", @placeholder = "Password", @type = "password" })
                                @Html.ValidationMessageFor(model => model.Password)

                                
                            </div>
                            <button type="submit" class="btn">LOGIN IN</button>
                            <div class="checkbox">
                                <input type="checkbox" id="remember-me" class="styled">
                                <label for="remember-me">Remember me</label>
                            </div>
                            }
                        </form>
                    </div>

                </div>
            </div>
